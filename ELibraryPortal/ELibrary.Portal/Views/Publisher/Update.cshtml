@model ELibrary.API.Type.Response<ELibrary.API.Models.PublisherModel>

@{
    ViewData["Title"] = "Update";
}

<h2>Update</h2>

<div class="col-md-12">
    <div class="widget">

        <div class="widget-heading">
            <h3 class="widget-title">Yayın Evi</h3>
        </div>
        <div class="widget-body">
            <form asp-action="Update">
                <input asp-for="Value.Id" name="Id" hidden="hidden"/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label name="Name" asp-for="Value.Name" class="control-label"></label>
                    <input name="Name" asp-for="Value.Name" class="form-control"/>
                    <span asp-validation-for="Value.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label name="Email" asp-for="Value.Email" class="control-label"></label>
                    <input name="Email" asp-for="Value.Email" class="form-control"/>
                    <span asp-validation-for="Value.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-default"/>
                </div>
            </form>
        </div>
    </div>
</div>


